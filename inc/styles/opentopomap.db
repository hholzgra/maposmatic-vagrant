#! /bin/bash

DBNAME=gis
export $DBNAME

cd $STYLEDIR/OpenTopoMap

cd mapnik

echo "station direction"
sudo -u maposmatic psql $DBNAME < tools/stationdirection.sql >/dev/null

echo "view point direction"
sudo -u maposmatic psql $DBNAME < tools/viewpointdirection.sql >/dev/null

echo "pitchicon"
sudo -u maposmatic psql $DBNAME < tools/pitchicon.sql >/dev/null

echo "update area labels"
sudo -u maposmatic psql $DBNAME < tools/arealabel.sql >/dev/null


cd ..

echo "update lowzoom"
sudo --user maposmatic --preserve-env=DBNAME mapnik/tools/update_lowzoom.sh >/dev/null

echo "update saddles"
sudo --user maposmatic --preserve-env=DBNAME mapnik/tools/update_saddles.sh >/dev/null

echo "update isolations"
sudo --user maposmatic --preserve-env=DBNAME mapnik/tools/update_isolations.sh >/dev/null

